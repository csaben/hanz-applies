{
  "claude_code_settings": {
    "agents": [
      {
        "description": "Specialized agent for code linting and style enforcement",
        "name": "linting-specialist",
        "permissions": {
          "bash_commands": [
            "npm run lint*",
            "eslint*",
            "prettier*",
            "ruff*",
            "black*",
            "isort*",
            "cargo clippy*",
            "cargo fmt*",
            "golangci-lint*",
            "gofmt*"
          ],
          "file_operations": [
            "read",
            "write",
            "edit"
          ],
          "git_operations": [
            "add",
            "commit",
            "status",
            "diff"
          ]
        }
      }
    ],
    "auto_approve": [
      "npm run lint",
      "npm run lint:fix",
      "ruff check",
      "ruff format",
      "cargo clippy",
      "cargo fmt"
    ],
    "auto_fix_on_save": false,
    "lint_on_save": true,
    "working_directory": "."
  }
}