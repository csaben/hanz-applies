{
  "claude_code_settings": {
    "agents": [
      {
        "name": "linting-specialist",
        "description": "Specialized agent for code linting and style enforcement",
        "permissions": {
          "file_operations": ["read", "write", "edit"],
          "bash_commands": [
            "npm run lint*",
            "eslint*",
            "prettier*", 
            "ruff*",
            "black*",
            "isort*",
            "cargo clippy*",
            "cargo fmt*",
            "golangci-lint*",
            "gofmt*"
          ],
          "git_operations": ["add", "commit", "status", "diff"]
        }
      }
    ],
    "auto_approve": [
      "npm run lint",
      "npm run lint:fix", 
      "ruff check",
      "ruff format",
      "cargo clippy",
      "cargo fmt"
    ],
    "working_directory": ".",
    "lint_on_save": true,
    "auto_fix_on_save": false
  }
}